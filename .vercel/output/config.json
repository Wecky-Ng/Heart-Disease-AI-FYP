{
  "version": 3,
  "routes": [
    { "src": "/css/(.*)", "dest": "/static/css/$1" },
    { "src": "/js/(.*)", "dest": "/static/js/$1" },
    { "src": "/img/(.*)", "dest": "/static/img/$1" },
    { "src": "/fonts/(.*)", "dest": "/static/fonts/$1" },
    { "src": "/(.*)\\.php$", "dest": "/api/index.php" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/api/index.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "overrides": {
    "functions": {
      "api/**/*.php": {
        "runtime": "vercel-php@0.7.3"
      }
    }
  }
}