{
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": ".vercel/output",
  "routes": [
    { "src": "/css/(.*)", "dest": "/static/css/$1" },
    { "src": "/js/(.*)", "dest": "/static/js/$1" },
    { "src": "/img/(.*)", "dest": "/static/img/$1" },
    { "src": "/fonts/(.*)", "dest": "/static/fonts/$1" },
    { "src": "/api/(.*)", "dest": "/functions/api/$1" },
    { "src": "/(.*)\\.php$", "dest": "/functions/index" },
    { "src": "/", "dest": "/functions/index" },
    { "src": "/(.*)", "dest": "/functions/index" }
  ],
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}