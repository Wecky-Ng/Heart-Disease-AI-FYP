{
  "version": 2,
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.7.3" }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/index.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "buildCommand": "chmod +x ./vercel-build.sh && ./vercel-build.sh",
  "outputDirectory": ".vercel/output",
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}